<Window x:Class="ChessBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="39*"/>
        </Grid.ColumnDefinitions>

        <Image Height="390" Width="390" Grid.ColumnSpan="2" Margin="10,22,10,22" 
               Source="/Picture/Download Modern chess board background design vector illustration for free.jpg" 
               Stretch="Fill" RenderTransformOrigin="0.497,0.463"
               MouseLeftButtonDown="Image_MouseLeftButtonDown"/>

        <Label Name="X" Width="65" Height="25" Grid.Column="2" Content="X:" HorizontalAlignment="Left" Margin="104,85,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.455,3.011"/>
        <Label Name="Y" Width="65" Height="25" Grid.Column="2" Content="Y:" HorizontalAlignment="Left" Margin="104,184,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.455,3.011"/>
    </Grid>
</Window>
